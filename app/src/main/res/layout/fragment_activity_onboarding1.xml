<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onboarding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/startColor">

    <ImageView
        android:id="@+id/phone_mockup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:translationY="100dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/bottom_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_top_rounded_bg"
        android:orientation="vertical"
        android:translationZ="10dp"
        app:layout_constraintTop_toBottomOf="@id/phone_mockup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Discover Meaningful\nConnections"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join Datify today and explore a world\n of meaningful connections Swipe,\n Match, and meet like-minded people."
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#101010"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:lineSpacingExtra="4dp" />


        <!-- Indicator Dots -->
        <LinearLayout
            android:id="@+id/indicator_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/indicator_selected"
                android:layout_margin="4dp" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/indicator_unselected"
                android:layout_margin="4dp" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/indicator_unselected"
                android:layout_margin="4dp" />
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:gravity="center">

            <Button
                android:id="@+id/skipButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/white"
                android:text="Skip"
                android:textColor="@color/startColor"
                android:layout_marginEnd="8dp" />

            <!-- Continue Button -->
            <Button
                android:id="@+id/continueButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/rounded_corners"
                android:layout_weight="1"
                android:text="Continue"
                android:backgroundTint="#A020F0"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
